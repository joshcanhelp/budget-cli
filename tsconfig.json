{
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "jest.config.ts"
  ],
  "compilerOptions": {
    "removeComments": true,
    "target": "es2022",
    "module": "es2022",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}